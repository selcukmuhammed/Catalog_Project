@model MVCatalog.Models.ProductViewModel
@{
	ViewData["Title"] = "Update";
}
@using (Html.BeginForm("Update", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

	<div class="form-group">
		@Html.LabelFor(Model => Model.ProductId, "ÜRÜN ID")
		@Html.TextBoxFor(Model => Model.ProductId, new { @class = "form-control" })
		@Html.HiddenFor(Model => Model.ProductId)
		<br />
		@Html.LabelFor(Model => Model.Name, "ÜRÜN ADI")
		@Html.TextBoxFor(Model => Model.Name, new { @class = "form-control" })
		<br />
		@Html.LabelFor(Model => Model.Price, "ÜRÜN FİYATI")
		@Html.TextBoxFor(Model => Model.Price, new { @class = "form-control" })
		<br />
		@Html.LabelFor(Model => Model.RecordTime, "ÜRÜN KAYIT TARİHİ")
		@Html.TextBoxFor(Model => Model.RecordTime, new { @class = "form-control" })
		<br />
		@Html.LabelFor(Model => Model.IsDeleted, "ÜRÜN DURUMU")
		@Html.TextBoxFor(Model => Model.IsDeleted, new { @class = "form-control" })
		<br />
		@Html.LabelFor(Model => Model.CategoryId, "ÜRÜN KATEGORİSİ")
		@Html.DropDownListFor(Model => Model.CategoryId, new SelectList(Model.CategoryList, "CategoryId", "Name"), "SEÇ", new { @class = "form-control" })
	</div>
	<br />
	<div>
		<button type="submit" class="btn btn-success">ÜRÜNÜ GÜNCELLE</button>
	</div>
}
<br />
<div>
	<a asp-action="Index">LİSTEYE GERİ DÖN</a>
</div>


